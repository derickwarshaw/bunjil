#footer
  clearfix()
  padding: 40px 0
  color: rgba(255, 255, 255, 0.6)
  font-family: font-sans
  position: relative
  text-align: center
  @media mq-normal
    text-align: left
  @media print
    display: none
  a
    color: inherit
    text-decoration: none
    transition: 0.2s
    &:hover
      color: #fff

#footer-copyright
  line-height: 1.4
  @media mq-normal
    float: left
  a
    font-weight: bold

#footer-links
  margin-top: 1em
  @media mq-normal
    float: right
    margin-top: 0

.footer-link
  font-size: 30px
  margin-left: 20px
  &:first-child
    margin-left: 0

.footer-badges
  opacity 0.8

#footer-made-by
  text-align center
  font-size 12px
  margin 4em 0